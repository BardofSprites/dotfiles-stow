WindowTitle {Org-Clock}
WindowSize  1000 30
Font "xft:Iosevka Comfy:size=20"

Init
 Begin
  Set $task = (GetOutput {exec emacsclient --eval '(bard/org-clock-task-string)'} 1 -1)
  ChangeTitle 1 $task
End

PeriodicTasks
 Begin
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
   Set $task = (GetOutput {exec emacsclient --eval '(bard/org-clock-task-string)'} 1 -1)
   ChangeTitle 1 $task
  End
End

Widget 1
Property
 Position 0 0
 Size 1000 30
 Font "xft:Iosevka Comfy:size=20"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End